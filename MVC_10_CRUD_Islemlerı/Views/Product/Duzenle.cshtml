@model ProductViewModel
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Düzenle</title>
    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <nav class="navbar fixed-top navbar-expand-lg bg-dark navbar-dark">
        <a href="/" class="navbar-brand">
            <img height="100" src="~/Images/RedLogo.png" />
        </a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/1" class="nav-link">Beverages</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/2" class="nav-link">Condiments</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/3" class="nav-link">Confection</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/4" class="nav-link">Dairy Products</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/5" class="nav-link">Grains/Cereals</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/6" class="nav-link">Meat/Poultry</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/7" class="nav-link">Produce</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/8" class="nav-link">Seafood</a>
            </li>
            <li class="nav-item">
                <a href="/Home/KategoriUrunleri/9" class="nav-link">Lalot</a>
            </li>


            <li class="nav-item dropdown">
                <a href="#" class="nav-link dropdown-toggle" id="navbardrop" data-toggle="dropdown">Ürün İşlemleri</a>
                <div class="dropdown-menu">
                    <a href="/Product/Index" class="dropdown-item">Ürünleri Listele</a>
                    <a href="/Product/Ekle" class="dropdown-item">Yeni Ürün Ekle</a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="container" style="margin-top:130px;">
        <form method="post" action="/Product/Duzenle">
            <div class="form-group">
                <label>Ürün Adı: </label>
                <input type="text" name="ProductName" class="form-control" placeholder="Ürün Adı" value="@Model.Urun.ProductName" />
            </div>
            <div class="form-group">
                <label>Fiyatı: </label>
                <input type="text" name="UnitPrice" class="form-control" placeholder="Ürün Fiyatı" value="@Model.Urun.UnitPrice" />
            </div>
            <div class="form-group">
                <label>Stok Miktarı: </label>
                <input type="text" name="UnitsInStock" class="form-control" placeholder="Stok Miktarı" value="@Model.Urun.UnitsInStock" />
            </div>
            <div class="form-group">
                <label>Kategori: </label>
                <select name="CategoryID" class="form-control">
                    @foreach (var item in Model.KatListesi)
                    {
                        <option value="@item.CategoryID">@item.CategoryName</option>
                    }
                </select>
            </div>
            <input type="hidden" value="@Model.Urun.ProductID" name="ProductID" />
            <div class="form-group">
                <input type="submit" class="btn btn-warning" value="Düzenle" />
            </div>
        </form>
    </div>
</body>
</html>